<UserControl
    x:Class="StoreFront.StoreView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:StoreFront"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="900"
    Height="450"
    MinWidth="900"
    MinHeight="450"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Language="en-GB"
    mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="https://steamuserimages-a.akamaihd.net/ugc/5063766435480454889/75BF48A3118812AE6C2E36E6F8394AADC949848E/?imw=637&amp;imh=358&amp;ima=fit&amp;impolicy=Letterbox&amp;imcolor=%23000000&amp;letterbox=true" />
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="30" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Label
            Grid.Row="0"
            Grid.Column="1"
            HorizontalAlignment="Right"
            Content="Stores"
            FontSize="18"
            Foreground="Aqua" />
        <Label
            Grid.Row="0"
            Grid.Column="2"
            Content="Store Inventory"
            FontSize="18"
            Foreground="Aqua" />
        <Label
            Grid.Row="2"
            Grid.Column="1"
            HorizontalAlignment="Right"
            Content="Operations"
            FontSize="18"
            Foreground="Aqua" />
        <Label
            Grid.Row="2"
            Grid.Column="2"
            Content="Main Inventory"
            FontSize="18"
            Foreground="Aqua" />
        <ListView
            Name="StoreList"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Background="Transparent"
            BorderThickness="2"
            Foreground="Wheat"
            ItemsSource="{Binding StoresList}"
            SelectionChanged="StoreList_OnSelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Width="Auto"
                        DisplayMemberBinding="{Binding StoreName}"
                        Header="Store Name" />
                    <GridViewColumn
                        Width="Auto"
                        DisplayMemberBinding="{Binding StoreAddress}"
                        Header="Store Address" />
                </GridView>
            </ListView.View>
        </ListView>
        <ListView
            Name="ShopList"
            Grid.Row="1"
            Grid.Column="2"
            Grid.ColumnSpan="2"
            Background="Transparent"
            BorderThickness="2"
            Foreground="Wheat"
            ItemsSource="{Binding ShopStoreList}"
            SelectionMode="Single">
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Width="Auto"
                        DisplayMemberBinding="{Binding Title}"
                        Header="Title" />
                    <GridViewColumn
                        Width="Auto"
                        DisplayMemberBinding="{Binding AllAuthors}"
                        Header="Author" />
                    <GridViewColumn
                        Width="Auto"
                        DisplayMemberBinding="{Binding LanguageNavigation.BookLanguage}"
                        Header="Language" />
                    <GridViewColumn
                        Width="Auto"
                        DisplayMemberBinding="{Binding GenreNavigation.GenreName}"
                        Header="Genre" />
                    <GridViewColumn
                        Width="Auto"
                        DisplayMemberBinding="{Binding Price}"
                        Header="Price" />
                    <GridViewColumn
                        Width="Auto"
                        DisplayMemberBinding="{Binding FormatNavigation.BookFormat1}"
                        Header="Format" />
                    <GridViewColumn
                        Width="Auto"
                        DisplayMemberBinding="{Binding PublisherNavigation.PublisherName}"
                        Header="Publisher" />
                    <GridViewColumn
                        Width="Auto"
                        DisplayMemberBinding="{Binding DateOfPublishing}"
                        Header="Date Published" />
                </GridView>
            </ListView.View>
        </ListView>
        <Grid Grid.Row="3" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="20" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="20" />
            </Grid.ColumnDefinitions>
            <Button
                Name="Void"
                Grid.Row="1"
                Grid.RowSpan="3"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Background="Black"
                Click="Void_OnClick" />
            <Button
                Name="AddBtn"
                Grid.Row="1"
                Grid.Column="3"
                HorizontalContentAlignment="Center"
                Background="Green"
                Click="AddBtn_OnClick"
                FontWeight="Bold">
                <TextBlock>
                    Add to<LineBreak />
                    Selected inventory</TextBlock>
            </Button>
            <Button
                Name="RemoveBtn"
                Grid.Row="2"
                Grid.Column="3"
                HorizontalContentAlignment="Center"
                Background="Red"
                Click="RemoveBtn_OnClick"
                FontWeight="Bold">
                <TextBlock>
                    Remove from<LineBreak />
                    Selected inventory</TextBlock>
            </Button>
            <Button
                Name="Uruk"
                Grid.Row="3"
                Grid.Column="3"
                Background="DarkSlateGray"
                Click="Uruk_OnClick"
                Content="�̥͉̭͚͇̑͗͝�̵̞̗̭̦ͭͪ̽̚r̨̞̙̼̺͖͔̃u̻̠͛́̂͒͢k̼̩̫̳̯̒͡"
                FontWeight="Bold" />
        </Grid>
        <ListView
            Name="AllBooks"
            Grid.Row="3"
            Grid.Column="2"
            Grid.ColumnSpan="2"
            Background="Transparent"
            BorderThickness="2"
            Foreground="Wheat"
            ItemsSource="{Binding AllBooksList}"
            SelectionMode="Single">
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Width="Auto"
                        DisplayMemberBinding="{Binding Title}"
                        Header="Title" />
                    <GridViewColumn
                        Width="Auto"
                        DisplayMemberBinding="{Binding AllAuthors}"
                        Header="Author" />
                    <GridViewColumn
                        Width="Auto"
                        DisplayMemberBinding="{Binding LanguageNavigation.BookLanguage}"
                        Header="Language" />
                    <GridViewColumn
                        Width="Auto"
                        DisplayMemberBinding="{Binding GenreNavigation.GenreName}"
                        Header="Genre" />
                    <GridViewColumn
                        Width="Auto"
                        DisplayMemberBinding="{Binding Price}"
                        Header="Price" />
                    <GridViewColumn
                        Width="Auto"
                        DisplayMemberBinding="{Binding FormatNavigation.BookFormat1}"
                        Header="Format" />
                    <GridViewColumn
                        Width="Auto"
                        DisplayMemberBinding="{Binding PublisherNavigation.PublisherName}"
                        Header="Publisher" />
                    <GridViewColumn
                        Width="Auto"
                        DisplayMemberBinding="{Binding DateOfPublishing}"
                        Header="Date Published" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
